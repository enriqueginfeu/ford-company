---
import { Image } from 'astro:assets';
import { autos } from '../data/autos';

export interface Props {
    titulo: string;
    descripcion: string;
    imagen: string;
    id: string;
}
const { titulo, descripcion, imagen, id } = Astro.props
---

<div class="mx-2 my-4">
    <a href={`/${id}`} class="color-ford flex flex-col border-gray-200 rounded-lg md:flex-col hover:bg-blue-800">
        <img class="w-full rounded-t-lg md:h-auto md:w-auto md:rounded-none md:rounded-l-lg" src={imagen} alt="">
        <div class="flex flex-col justify-between p-4 leading-normal md:m-auto md:text-center">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{titulo}</h5>
            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{descripcion}</p>
        </div>
    </a>   
</div>