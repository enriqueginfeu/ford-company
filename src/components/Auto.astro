---
export interface Props {
    id: string;
    title: string;
    img: string;
    description: string
}

const {
    title,
    img,
    description,
    id
} = Astro.props
---
<div class="relative">
    <div class="">
        <a href={`/${id}`}>
            <img src={img} class="rounded-md" alt={`Imagen Ford ${title}`}>
        </a>
    </div>
    <div class="absolute bottom-2 left-3">
        <h2 class="text-2xl text-white lg:text-4xl">
            {title}
        </h2>
    </div>
</div>