--- 

export interface Props {
    id: string;
    titulo: string;
    img: string;
    descripcion: string;
    precio: string;
}

const {
    titulo,
    img,
    descripcion,
    id,
    precio
} = Astro.props
---

<div class="p-4">
    <div class="">
            <img src={img} class="rounded-md" alt={`Imagen Ford ${titulo}`}>
    </div>
    <div class="text-center">
        <h2 class="text-2xl md:text-4xl">
            {titulo}
        </h2>
        <p class="text-2xl">
            {descripcion}
        </p>
        <div class="">
            <p class="text-xl font-bold">
               $ {precio}
            </p>
        </div>
        <div class="mt-3">
            <a href="#" class="bg-sky-700 hover:bg-sky-600 text-white py-2 px-10">
                COMPRAR
            </a>
        </div>
    </div>

</div>