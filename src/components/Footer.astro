<footer class="footer">
    <div class="contenedor contenido">
        <nav class="navegacion">
            <a href="/">Inicio</a>
            <a href="/historia">Historia</a>
            <a href="/modelos">Modelos</a>
            <a href="/accesorios">Accesorios</a>
            <a href="/plan">Planes</a>
            <a href="/service">Service</a>
        </nav>

        <p class="copyright">
            Todos los derechos Reservados - {new Date().getFullYear()}
        </p>
    </div>
</footer>

<style>
    .footer {
        background-image: linear-gradient(
                to right,
                rgb(0 0 0 / 0.7),
                rgb(0 0 0 / 0.6)
            ),
            url(../../public/img/header.webp);
        padding: 6rem 0;
        background-position: center;
        background-size: cover;
    }

    @media (min-width: 768px) {
        .footer {
            padding: 10rem 0;
        }
    }

    @media (min-width: 768px) {
        .contenido {
            display: flex;
            justify-content: space-between;
        }
    }
    .navegacion {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    @media (min-width: 768px) {
        .navegacion {
            flex-direction: row;
            padding: 1rem;
        }
    }
    .navegacion a,
    .copyright {
        color: whitesmoke;
        font-size: 1.1rem;
        text-decoration: none;
        font-weight: 700;
    }

    .navegacion a:hover,
    .active {
        border-radius: 0.3rem;
        color: #1576af;
    }

    .copyright {
        text-align: center;
        padding: 1rem;
    }
</style>
