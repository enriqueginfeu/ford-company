---
import Flotante from "../components/Flotante.astro";
import RedSocial from "../components/RedSocial.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Ranger Experience">
    <div class="mt-2 text-blue-900">
        <div class="relative">
            <img
                src="../src/assets/exp.webp"
                class="m-auto w-full lg:hidden"
                alt=""
            />
            <img
                src="../src/assets/ranger-exp.webp"
                class="m-auto w-full hidden lg:flex"
                alt=""
            />
        </div>
        <div
            class="absolute top-72 left-1 text-xl text-center text-white sm:bottom-28 sm:left-24 md:top-[30rem] md:left-[9.4rem] xl:left-[20rem] xl:top-[22rem] xl:text-4xl 2xl:top-[28rem] 2xl:left-[35.5rem]"
        >
            <h2>Te invitamos a vivir una experiencia Off Road única</h2>
        </div>
        <div
            class="absolute top-96 left-[30%] sm:bottom-16 md:top-[33rem] md:left-[17.5rem] xl:left-[38.5rem] xl:top-[27rem] 2xl:top-[32rem] 2xl:left-[53.5rem]"
        >
            <div class="block space-y-4 md:flex md:space-y-0 md:space-x-4">
                <!-- Modal toggle -->
                <button
                    data-modal-target="extralarge-modal"
                    data-modal-toggle="extralarge-modal"
                    class="text-base text-white bg-sky-600 md:text-xl hover:bg-sky-500 rounded-3xl py-1 px-5 sombra"
                    type="button"
                >
                    Quiero Participar
                </button>
            </div>

            <!-- Extra Large Modal -->
            <div
                id="extralarge-modal"
                tabindex="-1"
                class="fixed top-0 left-0 right-0 z-50 hidden w-full p-4 overflow-x-hidden overflow-y-auto md:inset-0 h-[calc(100%-1rem)] max-h-full"
            >
                <div class="relative w-full max-w-7xl max-h-full">
                    <!-- Modal content -->
                    <div class="relative bg-white rounded-lg shadow">
                        <!-- Modal header -->
                        <div
                            class="modal-bg flex items-center justify-between p-5 border-b rounded-t dark:border-gray-600"
                        >
                            <button
                                type="button"
                                class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                data-modal-hide="extralarge-modal"
                            >
                                <svg
                                    class="w-3 h-3"
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 14 14"
                                >
                                    <path
                                        stroke="currentColor"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
                                    ></path>
                                </svg>
                                <span class="sr-only">Close modal</span>
                            </button>
                        </div>
                        <!-- Modal body -->
                        <div class="p-6 space-y-6">
                            <form>
                                <div class="grid gap-6 mb-6 md:grid-cols-2">
                                    <div>
                                        <h2 class="text-lg my-5 font-semibold">
                                            Informacion de Contacto
                                        </h2>
                                        <div class="mb-3">
                                            <input
                                                type="text"
                                                id="nombre"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Nombre"
                                                required
                                            />
                                        </div>
                                        <div class="mb-3">
                                            <input
                                                type="text"
                                                id="apellido"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Apellido"
                                                required
                                            />
                                        </div>
                                        <div class="mb-3">
                                            <div class="mb-3">
                                                <input
                                                    type="text"
                                                    id="documento"
                                                    class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                    placeholder="Numero de Documento"
                                                    required
                                                />
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <input
                                                type="number"
                                                id="phone"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Telefono"
                                                pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}"
                                                required
                                            />
                                        </div>
                                        <div class="mb-3">
                                            <input
                                                type="email"
                                                id="email"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Email"
                                                required
                                            />
                                        </div>
                                        <div>
                                            <img src="../src/assets/onlineForm1.webp" class="m-auto w-full" alt="">
                                        </div>
                                    </div>

                                    <div>
                                        <h2 class="text-lg my-5 font-semibold">
                                            Informacion Adicional
                                        </h2>
                                        <div class="mb-3">
                                            <input
                                                type="text"
                                                id="patente"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Patente"
                                                required
                                            />
                                        </div>
                                        <div class="mb-3">
                                            <input
                                                type="text"
                                                id="modelo"
                                                class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5"
                                                placeholder="Modelo"
                                                required
                                            />
                                        </div>
                                        <div>
                                            <select name="" id="" class="bg-gray-50 border border-gray-300 text-gray-800 text-sm block w-full p-2.5" required>
                                                <option value="">Elegir Circuito</option>
                                                <option value="">CIRCUITO 1</option>
                                                <option value="">CIRCUITO 2</option>
                                                <option value="">CIRCUITO 3</option>
                                                <option value="">EXCLUSIVO CLIENTES FORD</option>
                                            </select>
                                        </div>
                                        <div>
                                            <h2
                                                class="text-lg mt-10 mb-6 font-semibold"
                                            >
                                                ¿Cómo preferís que te
                                                contactemos?
                                            </h2>

                                            <div class="flex items-center mb-4">
                                                <input
                                                    id="default-radio-1"
                                                    type="radio"
                                                    value=""
                                                    name="default-radio"
                                                    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                                />
                                                <label
                                                    for="default-radio-1"
                                                    class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-900"
                                                    >Llamado</label
                                                >
                                            </div>
                                            <div class="flex items-center">
                                                <input
                                                    checked
                                                    id="default-radio-2"
                                                    type="radio"
                                                    value=""
                                                    name="default-radio"
                                                    class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                                />
                                                <label
                                                    for="default-radio-2"
                                                    class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-900"
                                                    >Whatsapp</label
                                                >
                                            </div>
                                        </div>
                                        <div class="flex mt-10 mb-4">
                                            <input
                                                id="default-radio-1"
                                                type="checkbox"
                                                value=""
                                                name="default-radio"
                                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                            />
                                            <label
                                                for="default-radio-1"
                                                class="text-sm font-medium text-gray-900 w-3/4 ml-5 dark:text-gray-900"
                                                >Quiero recibir información vía email, WhatsApp, sms u otros canales digitales, sobre productos y servicios Ford.</label
                                            >
                                        </div>
                                        <div class="flex mt-5 mb-4">
                                            <input
                                                id="default-radio-1"
                                                type="checkbox"
                                                value=""
                                                name="default-radio"
                                                required
                                                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                                            />
                                            <label
                                                for="default-radio-1"
                                                class="text-sm font-medium text-gray-900 w-3/4 ml-5 dark:text-gray-900"
                                                >Acepto términos y condiciones de uso</label
                                            >
                                        </div>
                                        <button
                                        type="submit"
                                        class="text-white bg-blue-600 hover:bg-blue-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium text-sm w-full sm:w-auto px-10 py-2 mt-[2.2rem] text-center dark:bg-blue-600 dark:hover:bg-blue-500 dark:focus:ring-blue-500"
                                        >Enviar
                                    </button>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <!-- Modal footer -->
                    </div>
                </div>
            </div>
        </div>
        <div class="my-5 text-center p-4">
            <h2 class="text-3xl font-semibold 2xl:mb-5 2xl:text-5xl">
                Ford Ranger Experience 2023
            </h2>
            <h3 class="text-2xl mt-3">
                Vení a experimentar la adrenalina de la Raza Fuerte.
            </h3>
            <p class="text-xl mt-3 2xl:w-1/2 2xl:m-auto 2xl:mt-3">
                Vas a disfrutar de un recorrido extremo, compartir charlas con
                expertos y conocer las últimas novedades sobre nuestros
                productos. Registrate para que nos pongamos en contacto con vos
                y confirmá tu lugar en los distintos eventos por todo el país.
            </p>
            <p class="text-2xl mt-3 text-red-500">Cupos Limitados</p>
        </div>
        <div class="2xl:mt-10">
            <h2
                class="text-2xl text-center font-semibold 2xl:mb-5 2xl:text-5xl"
            >
                Fechas y Recorridos
            </h2>
            <div
                class="mt-5 sm:grid sm:grid-cols-2 lg:grid-cols-3 lg:w-2/3 lg:m-auto"
            >
                <div>
                    <img
                        src="../src/assets/circuito1.webp"
                        class="m-auto w-full p-4"
                        alt=""
                    />
                </div>
                <div>
                    <img
                        src="../src/assets/circuito2.webp"
                        class="m-auto w-full p-4"
                        alt=""
                    />
                </div>
                <div>
                    <img
                        src="../src/assets/circuito3.webp"
                        class="m-auto w-full p-4"
                        alt=""
                    />
                </div>
            </div>
        </div>
        <div class="2xl:mb-16 2xl:mt-28">
            <h2
                class="text-3xl font-semibold text-center mt-10 2xl:mb-5 2xl:text-5xl"
            >
                Galeria
            </h2>
            <div
                class="grid grid-cols-2 md:grid-cols-3 2xl:place-items-center 2xl:w-3/4 2xl:m-auto mt-5 mb-10 gap-1"
            >
                <div>
                    <img src="../src/assets/exp-1.webp" alt="" />
                </div>
                <div>
                    <img src="../src/assets/exp-2.webp" alt="" />
                </div>
                <div>
                    <img src="../src/assets/exp-3.webp" alt="" />
                </div>
                <div>
                    <img src="../src/assets/exp-4.webp" alt="" />
                </div>
                <div>
                    <img src="../src/assets/exp-5.webp" alt="" />
                </div>
                <div>
                    <img src="../src/assets/exp-6.webp" alt="" />
                </div>
            </div>
        </div>
    </div>

    <RedSocial />

    <Flotante />
</Layout>

<style>
    .modal-bg {
        background-image: url(../assets/ranger-exp-banner.webp);
        background-size: auto;
        background-repeat: no-repeat;
        background-position: center;
        padding: 5.5rem 0;
    }
</style>
